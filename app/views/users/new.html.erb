<style>#one, #two{width: 400px; display: inline-block; vertical-align: top;border: 2px solid black; margin: 20px; padding: 10px}</style>
<div id ='one'>
	<h2>Register</h2>
	<form action='/users' method='post'>
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<p>Name: <input type='text' name='user[name]'></p>
		<p>Email: <input type='email' name='user[email]'></p>
		<p>Password: <input type='password' name='user[password]'></p>
		<p>Confirm PW: <input type='password' name='user[password_confirmation]'></p>
		<p><%= flash[:registration_errors]%></p>

		<input type='submit' value='Register'></p>


	</form>

</div>

<div id='two'>
	<h2>Log In</h2>
	<form action='/sessions' method='post'>
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<p><input type='email' name='email' placeholder='Email'></p>
		<p><input type='password' name='password' placeholder='Password'></p>
		<p><%= flash[:login_error]%></p>
		<p><input type='submit' value='Log In'></p>


	</form>

</div>